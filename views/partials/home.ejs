<div class="row ">
    <div class="col-xl-6 col-lg-6 col-md-6 col-12">
        <div class="card card-success">
            <div class="card-header clearfix col-header">

                <span class="float-left">Recent blocks</span>
                <!-- <button type="button" class="btn btn-outline-primary btn-sm float-right">View all</button> -->

            </div>
            <div class="card-body scrollbar block-col style-1 padding-0">
                <ul class="list-group" id="list-blocks">
                    <%blocks.forEach(block => {%>
                        <li class="list-group-item list-group-item-<%=block.number%2==0?'secondary':'success'%>">

                                <div class="col-12">
                                    block
                                    <a href="/block?number=<%=block.number%>"><%=block.number%></a>
                                    (<span class="time-moment"><%=block.timestamp%></span>)
                                    <br>
                                    mined by
                                    <a href="/addr?a=<%=block.miner%>"><%=block.miner%></a><br>
                                    <span>txs <%=block.transactions.length%> </span>
                                    <span>uncles <%=block.uncles.length%></span>
                                    <!-- <span>3.375 eth</span> -->
                                </div>
                        </li>
                    <%})%>                    
                    
                </ul>

            </div>
        </div>
    </div>
    
    <div class="col-xl-6 col-lg-6 col-md-6 col-12">
        <div class="card card-success">
            <div class="card-header clearfix col-header">
                <span class="float-left">Recent transactions</span>
                <!-- <button type="button" class="btn btn-outline-primary btn-sm float-right">View all</button> -->
            </div>
            <div class="card-body scrollbar block-col style-1 padding-0">
                <ul class="list-group" id="list-txs">
                    <%txs.forEach((tx, i) => {%>
                    <li class="list-group-item list-group-item-<%if(i%2==0) {%>secondary<%}else{%>success<%}%>">
                        hash
                        <a href="#"><%=Common.shortTextEndingWithDot(tx.hash, 40)%></a><br> 
                        from <a href="#"><%=Common.shortTextEndingWithDot(tx.from, 20)%></a>
                        to <a href="#"><%=Common.shortTextEndingWithDot(tx.to, 20)%></a>
                        <br>
                        value <span><%=tx.value%></span>
                        <!-- <span class="float-right">90s ago</span> -->
                    </li>
                    <%})%>
                </ul>
            </div>
        </div>
    </div>
</div>
