<div class="row">
    <div class="col-xl-12">
        <div class="card">

            <div class="card-header clearfix">

                <h5>Transaction <%=tx.hash%></h5>

            </div>
            <div class="card-body padding-0">
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="tab" href="#home">Overview</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#menu1">Event logs</a>
                    </li>
                    <!-- <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#menu2">Internal txs</a>
                    </li> -->
                </ul>

                <!-- Tab panes -->
                <div class="tab-content">
                    <br>
                    <div id="home" class="container tab-pane active padding-0">
                        <div class="table-responsive-sm">
                            <table class="table table-bordered">
                                <tbody>

                                    <tr>
                                        <td>Hash</td>
                                        <td><%=tx.hash%></td>
                                    </tr>
                                    <tr>
                                        <td>Block</td>
                                        <td>
                                            <a href="/block?number=<%=tx.blockNumber%>"><%=tx.blockNumber%></a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Time</td>
                                        <td>
                                            ?
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>From</td>
                                        <td><a href="/addr?a=<%=tx.from%>"><%=tx.from%></a></td>
                                    </tr>
                                    <tr>
                                        <td>To</td>
                                        <td><a href="/addr?a=<%=tx.to%>"><%=tx.to%></a></td>
                                    </tr>

                                    <tr>
                                        <td>Gas Price:</td>
                                        <td><%=tx.gasPrice%></td>
                                    </tr>
                                    <tr>
                                        <td>Gas Limit:</td>
                                        <td><%=tx.gas%></td>
                                    </tr>
                                    <tr>
                                        <td>Gas Used:</td>
                                        <td>                                            
                                            <%=tx.gasUsed%>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Nonce</td>
                                        <td><%=tx.nonce%></td>
                                    </tr>
                                    <tr>
                                        <td>Value</td>
                                        <td><%=tx.value%></td>
                                    </tr>
                                    <tr>
                                        <td>Input</td>
                                        <td>
                                            <div class="form-group">
                                                <textarea class="form-control" rows="3" id="comment"><%=tx.input%></textarea>
                                            </div> 
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>r</td>
                                        <td><%=tx.r%></td>
                                    </tr>
                                    <tr>
                                        <td>s</td>
                                        <td><%=tx.s%></td>
                                    </tr>
                                    <tr>
                                        <td>v</td>
                                        <td><%=tx.v%></td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div id="menu1" class="container tab-pane fade padding-0">
                        <div class="table-responsive-sm">
                            <table class="table table-bordered">
                                <tbody>
                                    <%if(tx.logs) tx.logs.forEach((log, idx)=>{%>
                                        <tr>
                                            <td>[<%=idx%>]</td>
                                            <td>Address </td>
                                            <td>
                                                <a href="/addr?a=<%=log.address%>"><%=log.address%></a>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td></td>
                                            <td>Name </td>
                                            <td>
                                                ?
                                            </td>
                                        </tr>
                                        <tr>
                                            <td></td>
                                            <td>Topic </td>
                                            <td>
                                                <%log.topics.forEach((t, i)=>{%>
                                                    [<%=i%>] <%=t%><br>
                                                <%})%>
                                                
                                            </td>
                                        </tr>
                                        <tr>
                                            <td></td>
                                            <td>data </td>
                                            <td>
                                                <%=log.data%>
                                            </td>
                                        </tr>
                                    <%})%>
                                    

                                </tbody>
                            </table>
                        </div>

                    </div>
                    <div id="menu2" class="container tab-pane fade padding-0">
                        <div class="table-responsive-sm">
                            <table class="table table-bordered">
                                <thead>
                                    <th>op code</th>
                                    <th>from</th>
                                    <th>to</th>
                                    <th>amount</th>
                                    <th>gas</th>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>CALL</td>
                                        <td>
                                            <a href="#">0x6c6ee5e31d828de241282b9606c8e98ea48526e2</a>
                                        </td>
                                        <td>
                                            <a href="#">0x6c6ee5e31d828de241282b9606c8e98ea48526e2</a>
                                        </td>
                                        <td>
                                            19899
                                        </td>
                                        <td>
                                            19899
                                        </td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
